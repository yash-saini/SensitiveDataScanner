<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SesnsitiveDataScan.MainPage"
             xmlns:vm="clr-namespace:SesnsitiveDataScan.ViewModels"
             xmlns:valueConverter ="clr-namespace:SesnsitiveDataScan.ValueConverter"
             xmlns:models="clr-namespace:SesnsitiveDataScan.Models"
             x:DataType="vm:MainViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:shell="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             shell:Shell.NavBarIsVisible="True">

    <ContentPage.Resources>
        <ResourceDictionary>
            <valueConverter:MaskingConverter x:Key="MaskingConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <shell:Shell.TitleView>
        <Grid>
            <Label Text="Sensitive Data Scanner"
                   FontAttributes="Bold"
                   FontSize="28"
                   Margin="0,10,0,0"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>
    </shell:Shell.TitleView>

    <!-- Main layout grid: upper content + lower button -->
    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Header and filter content (fixed) -->
        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="20">
            <Button Text="Pick File to Scan"
                    Command="{Binding PickAndScanFileCommand}"
                    BackgroundColor="#007acc"
                    TextColor="White"
                    CornerRadius="6"
                    HeightRequest="45"
                    HorizontalOptions="Center"/>

            <HorizontalStackLayout>
                <Label Text="File Name:" FontAttributes="Bold" />
                <Label Text="{Binding FileName}" LineBreakMode="TailTruncation" Margin="10,0,0,0" />
            </HorizontalStackLayout>

            <Label Text="Detected Sensitive Data:" FontAttributes="Bold" Margin="0,20,0,0" />

            <!-- Filter Bar -->
            <HorizontalStackLayout Spacing="10" Padding="4,0">
                <Entry Placeholder="Type to filter..."
                       Text="{Binding FilterText, Mode=TwoWay}"
                       WidthRequest="250"
                       BackgroundColor="#f0f0f0"
                       FontAttributes="Italic"
                       HeightRequest="35"
                       Margin="0,5" />
            </HorizontalStackLayout>

            <!-- Column Headers with fixed widths to match data columns -->
            <Grid ColumnDefinitions="100, 2*, 1.5*" ColumnSpacing="20" Padding="4,0" Margin="0,0,0,4">
                <Label Text="Type" FontAttributes="Bold" Grid.Column="0" />
                <Label Text="Original" FontAttributes="Bold" Grid.Column="1" />
                <Label Text="Masked" FontAttributes="Bold" Grid.Column="2" />
            </Grid>
        </VerticalStackLayout>

        <!-- Scrollable CollectionView only -->
        <ScrollView Grid.Row="1">
            <!-- CollectionView -->
            <CollectionView ItemsSource="{Binding FilteredDetectedItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:DetectedItem">
                        <Grid ColumnDefinitions="100, 2*, 1.5*" ColumnSpacing="20" Padding="4">
                            <!-- Type Label with background -->
                            <Frame BackgroundColor="LightGray"
                                   Padding="8,4"
                                   Margin="0,2"
                                   CornerRadius="4"
                                   HasShadow="False"
                                   Grid.Column="0"
                                   HorizontalOptions="Start"
                                   WidthRequest="90"
                                   VerticalOptions="Center">
                                <Label Text="{Binding Type}" 
                                       FontSize="12" 
                                       HorizontalOptions="Center" />
                            </Frame>
                            <Label Text="{Binding Original}" 
                                   Grid.Column="1" 
                                   LineBreakMode="TailTruncation"
                                   VerticalOptions="Center"/>
                            <Label Text="{Binding Masked}" 
                                   Grid.Column="2" 
                                   TextColor="Gray"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Fixed Bottom Button -->
        <VerticalStackLayout Grid.Row="2"
                             Padding="20"
                             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">
            <Button Text="Export Detected + Masked Results"
                    Command="{Binding ExportResultsCommand}"
                    IsVisible="{Binding HasDetectedItems}"
                    BackgroundColor="#007acc"
                    TextColor="White"
                    CornerRadius="6"
                    HeightRequest="45"
                    HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Busy indicator overlay -->
        <Grid IsVisible="{Binding IsBusy}"
              BackgroundColor="#80000000"
              InputTransparent="False"
              Grid.RowSpan="3"
              ZIndex="99">
            <VerticalStackLayout HorizontalOptions="Center" 
                                VerticalOptions="Center" 
                                Spacing="15">
                <Frame CornerRadius="10" 
                       BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=#333333}"
                       HasShadow="True"
                       Padding="30">
                    <VerticalStackLayout Spacing="15">
                        <ActivityIndicator IsRunning="True"
                                          Color="#007acc"
                                          WidthRequest="50"
                                          HeightRequest="50"
                                          HorizontalOptions="Center"/>
                        <Label Text="Please wait..."
                              FontAttributes="Bold"
                              HorizontalOptions="Center"
                              TextColor="{AppThemeBinding Light=#333333, Dark={StaticResource White}}"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>