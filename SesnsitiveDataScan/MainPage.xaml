<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SesnsitiveDataScan.MainPage"
             xmlns:vm="clr-namespace:SesnsitiveDataScan.ViewModels"
             x:DataType="vm:MainViewModel"
             Title="Sensitive Data Scanner">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Button Text="Pick File to Scan"
                Clicked="Button_Clicked"
                HorizontalOptions="Center" />

        <Label x:Name="FileContentLabel"
               Text="No file loaded"
               LineBreakMode="WordWrap" />

        <Label Text="Detected Sensitive Data:" FontAttributes="Bold" Margin="0,20,0,0"/>
        <CollectionView ItemsSource="{Binding DetectedItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
