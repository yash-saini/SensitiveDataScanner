<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
	<Style x:Key="Styles.ClickableImage" TargetType="Image">
		<Setter Property="Scale" Value="1" />
		<Setter Property="Opacity" Value="0.9" />
		<Style.Triggers>
			<Trigger TargetType="Image" Property="IsFocused" Value="True">
				<Setter Property="Scale" Value="1.1" />
				<Setter Property="Opacity" Value="1" />
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="Styles.ClickableLabel" TargetType="Label">
		<Setter Property="TextDecorations" Value="None" />
		<Style.Triggers>
			<Trigger TargetType="Label" Property="IsFocused" Value="True">
				<Setter Property="TextDecorations" Value="Underline" />
			</Trigger>
		</Style.Triggers>
	</Style>
</ResourceDictionary>
