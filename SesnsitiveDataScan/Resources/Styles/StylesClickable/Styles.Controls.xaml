<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="PrimaryColor">#007acc</Color>
    <Color x:Key="AccentColor">#28a745</Color>
    <Color x:Key="SecondaryColor">#6c757d</Color>
    <Color x:Key="LightBackground">#f9f9f9</Color>
    <Color x:Key="DarkBackground">#333333</Color>
    <Color x:Key="BorderColor">#cccccc</Color>
    
    <Style x:Key="Styles.SectionHeader" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="0,10,0,5" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
    </Style>

    <Style x:Key="Styles.PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HeightRequest" Value="45" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="Styles.AccentButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="Styles.SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="Styles.FilterEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="#f0f0f0" />
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="HeightRequest" Value="35" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="Margin" Value="0,5" />
    </Style>
	
    <Style x:Key="Styles.DataTypeFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="LightGray" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="WidthRequest" Value="90" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

	<Style x:Key="Styles.CardFrame" TargetType="Frame">
		<Setter Property="BorderColor" Value="{StaticResource Gray200}" />
		<Setter Property="CornerRadius" Value="10" />
		<Setter Property="HasShadow" Value="True" />
	</Style>
</ResourceDictionary>  